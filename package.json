  "license": "MIT",
  "packageManager": "yarn@3.2.4",
  "scripts": {
    "minifyJS": "uglifyjs src/confetti.js src/report.js -c -m -o srv/assets/scripts.min.js",
    "buildCSS": "postcss src/tailwind.css -o srv/assets/styles.min.css",
    "build": "yarn run minifyJS && yarn run buildCSS",
    "reset": "shx rm yarn.lock && yarn cache clean && yarn install"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.14",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "shx": "^0.3.4",
    "tailwindcss": "^3.2.1",
    "uglify-js": "^3.17.4"
  }
}
